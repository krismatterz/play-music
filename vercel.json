{
  "buildCommand": null,
  "installCommand": null,
  "framework": null,
  "builds": [
    {
      "src": "apps/play/next.config.js",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "cd ../../ && bun install && cd apps/play && ESLINT_NO_DEV_ERRORS=true bun run build",
        "outputDirectory": ".next"
      }
    },
    {
      "src": "apps/artist/next.config.js",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "cd ../../ && bun install && cd apps/artist && ESLINT_NO_DEV_ERRORS=true bun run build",
        "outputDirectory": ".next"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/play/$1",
      "has": [{ "type": "host", "value": "play-music.app" }]
    },
    {
      "source": "/(.*)",
      "destination": "/apps/artist/$1",
      "has": [{ "type": "host", "value": "artist.play-music.app" }]
    }
  ],
  "env": {
    "NEXT_PUBLIC_FIREBASE_API_KEY": "${NEXT_PUBLIC_FIREBASE_API_KEY}",
    "NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN": "${NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN}",
    "NEXT_PUBLIC_FIREBASE_PROJECT_ID": "${NEXT_PUBLIC_FIREBASE_PROJECT_ID}",
    "NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET": "${NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET}",
    "NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID": "${NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID}",
    "NEXT_PUBLIC_FIREBASE_APP_ID": "${NEXT_PUBLIC_FIREBASE_APP_ID}",
    "NEXT_PUBLIC_PLAY_DOMAIN": "play-music.app",
    "NEXT_PUBLIC_ARTIST_DOMAIN": "artist.play-music.app",
    "NEXT_PUBLIC_APP_URL": "https://play-music.app",
    "NEXT_PUBLIC_PRODUCTION_URL": "https://play-music.app",
    "FIREBASE_ADMIN_PROJECT_ID": "${FIREBASE_ADMIN_PROJECT_ID}",
    "FIREBASE_ADMIN_CLIENT_EMAIL": "${FIREBASE_ADMIN_CLIENT_EMAIL}",
    "FIREBASE_ADMIN_PRIVATE_KEY": "${FIREBASE_ADMIN_PRIVATE_KEY}",
    "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
    "NEXT_PUBLIC_SPOTIFY_CLIENT_ID": "${NEXT_PUBLIC_SPOTIFY_CLIENT_ID}"
  }
}
